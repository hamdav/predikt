// ------------------------------------------------------
// Plot Screen with fl_chart plot + trendline
// ------------------------------------------------------
class PlotScreen extends StatefulWidget {
  const PlotScreen({super.key});

  @override
  State<PlotScreen> createState() => _PlotScreenState();
}

class DataPoint {
  final double value;
  final DateTime timestamp;
  DataPoint({required this.value, required this.timestamp});
}

class _PlotScreenState extends State<PlotScreen> {
  final TextEditingController _controller = TextEditingController();
  final List<DataPoint> values = [];

    void _addValueNow() {
      final text = _controller.text.trim();
      if (text.isEmpty) return;

      final number = double.tryParse(text);
      if (number == null) return;

      setState(() {
        points.add(DataPoint(
          value: number,
          timestamp: DateTime.now(),
        ));
        _controller.clear();
      });
    }

    void _addValueWithPicker() async {
      final picked = await pickDateTime(context);
      if (picked == null) return;

      final text = _controller.text.trim();
      if (text.isEmpty) return;

      final number = double.tryParse(text);
      if (number == null) return;

      setState(() {
        points.add(DataPoint(
          value: number,
          timestamp: picked,
        ));
        _controller.clear();
      });
    }

    Future<DateTime?> pickDateTime(BuildContext context) async {
      final date = await showDatePicker(
        context: context,
        initialDate: DateTime.now(),
        firstDate: DateTime(2000),
        lastDate: DateTime(2100),
      );

      if (date == null) return null;

      final time = await showTimePicker(
        context: context,
        initialTime: TimeOfDay.now(),
      );

      if (time == null) return null;

      return DateTime(
        date.year,
        date.month,
        date.day,
        time.hour,
        time.minute,
      );
    }

  // ------------------------------
  // Linear Regression (trendline)
  // ------------------------------
  List<FlSpot> computeTrendline() {
    if (values.length < 2) return [];

    final n = points.length;
    final xs = List<double>.generate(n, (i) => i.toDouble());
    final ys = values;

    // Compute means
    final meanX = xs.reduce((a, b) => a + b) / n;
    final meanY = ys.reduce((a, b) => a + b) / n;

    // Compute slope (m) and intercept (b)
    double num = 0;
    double den = 0;
    for (int i = 0; i < n; i++) {
      num += (xs[i] - meanX) * (ys[i] - meanY);
      den += (xs[i] - meanX) * (xs[i] - meanX);
    }
    final m = num / den;
    final b = meanY - m * meanX;

    // Trendline goes from x = 0 to x = n-1
    return [
      FlSpot(0, m * 0 + b),
      FlSpot((n - 1).toDouble(), m * (n - 1) + b),
    ];
  }

  // ------------------------------
  // Build Chart Widget
  // ------------------------------
  Widget buildLineChart() {
    if (values.isEmpty) {
      return const Center(child: Text("Chart will appear here"));
    }

    final spots = [
      for (int i = 0; i < values.length; i++)
        FlSpot(i.toDouble(), values[i])
    ];

    final trend = computeTrendline();

    return LineChart(
      LineChartData(
        minX: 0,
        maxX: (values.length - 1).toDouble(),

        minY: (values.reduce((a, b) => a < b ? a : b)) - 1,
        maxY: (values.reduce((a, b) => a > b ? a : b)) + 1,

        gridData: const FlGridData(show: true),
        titlesData: const FlTitlesData(show: true),
        borderData: FlBorderData(
          show: true,
          border: const Border(
            top: BorderSide.none,
            right: BorderSide.none,
            left: BorderSide(width: 2),
            bottom: BorderSide(width: 2),
          ),
        ),

        lineBarsData: [
          // User data points
          LineChartBarData(
            spots: spots,
            isCurved: false,
            color: Colors.blue,
            barWidth: 3,
            dotData: const FlDotData(show: true),
          ),

          // Trendline
          if (trend.isNotEmpty)
            LineChartBarData(
              spots: trend,
              isCurved: false,
              color: Colors.red,
              barWidth: 2,
              dotData: const FlDotData(show: false),
            ),
        ],
      ),
    );
  }

  // ------------------------------
  // Build UI
  // ------------------------------
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: const Text("Plot Values")),
      body: Padding(
        padding: const EdgeInsets.all(16.0),
        child: Column(
          children: [
            // Numeric input
            Row(
              children: [
                Expanded(
                  child: TextField(
                    controller: _controller,
                    keyboardType:
                        const TextInputType.numberWithOptions(decimal: true),
                    decoration: const InputDecoration(
                      labelText: "Enter a number",
                      border: OutlineInputBorder(),
                    ),
                  ),
                ),
                const SizedBox(width: 10),
                GestureDetector(
                  onTap: _addValueNow,
                  onLongPress: _addValueWithPicker,
                  child: ElevatedButton(
                    onPressed: null,
                    child: const Text("Add"),
                  ),
                )
              ],
            ),

            const SizedBox(height: 20),

            // Chart area
            Expanded(
              child: Container(
                padding: const EdgeInsets.all(12),
                decoration: BoxDecoration(
                  color: Colors.grey.shade100,
                  borderRadius: BorderRadius.circular(12),
                ),
                child: buildLineChart(),
              ),
            ),
          ],
        ),
      ),
    );
  }
}

